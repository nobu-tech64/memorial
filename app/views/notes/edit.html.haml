= form_for @note do |f|
  .header
    .header__title
      日記

  .body
    .sidebar
      .sidebar__text
      .sidebar__calendar
        = month_calendar events: @notes do |date, notes|
          = date.day
          - notes.each do |note|
            = link_to edit_note_path(note) do
              = note.title
    .main
      .diary
        .diary__time
          = f.datetime_select :start_time, discard_hour: true, discard_minute: true
        .diary__title
          = f.text_field :title
        .diary__content
          = f.text_area :content
      .save
        = f.submit "保存する"