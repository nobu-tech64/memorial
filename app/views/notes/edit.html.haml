= form_for @note do |f|
  .header
    .mainContainer
      .mainContainer__title
        日記
    .subContainer
      MENU
    .menu#color
      .navigation-block
        %ul.navigation-list
          %li.nav_menu1
            %a{href: ""} 日付一覧
          %li.nav_menu2
            %a{href: ""} 内容一覧
  .body
    .sidebar
      .sidebar__text
      .sidebar__calendar
        = month_calendar events: @notes do |date, notes|
          = date.day
          - notes.each do |note|
            -# link_toで画面遷移したときに初めの一回目だけjavascriptが機能しないことがないようにdata: {"turbolinks" => false}を追加。
            = link_to edit_note_path(note), data: {"turbolinks" => false} do
              = note.title
    .main
      .diary
        .diary__time
          = f.datetime_select :start_time, use_month_numbers: true, date_separator: '/',discard_hour: true, discard_minute: true
        .diary__title
          = f.text_field :title
        .diary__content
          = f.text_area :content
      .save
        -# 削除ボタンクリック時に確認ダイアログを表示させるためのjs処理を追加したが、link_toの場合は通用しない様子
        -# :javascript
        -#   function submitChk(){
        -#     let back = confirm('ほんまに削除しますか？');
        -#     if (back == true){
        -#       return back;
        -#     }else{
        -#       console.log(back);
        -#     }
        -#   }
        = f.submit "保存する", class: "submit_btn"
        .back_btn
          = link_to root_path, data: {"turbolinks" => false} do
            = '戻る'
        .delete_btn
          -# 削除ボタンをクリックしたときに確認ダイアログが表示されるようにオプション追加
          = link_to note_path(params[:id]), method: :delete, data: {confirm: '削除しますか？'} do
            = '削除'