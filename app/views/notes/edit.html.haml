= form_for @note do |f|
  .header
    .mainContainer
      .mainContainer__title
        日記
    .subContainer
      MENU
    .menu#color
      .navigation-block
        %ul.navigation-list
          %li.nav_menu1
            %a{href: ""} 日付一覧
          %li.nav_menu2
            %a{href: ""} 内容一覧
  .body
    .sidebar
      .sidebar__text
      .sidebar__calendar
        = month_calendar events: @notes do |date, notes|
          = date.day
          - notes.each do |note|
            = link_to edit_note_path(note), data: {"turbolinks" => false} do
              = note.title
    .main
      .diary
        .diary__time
          = f.datetime_select :start_time, use_month_numbers: true, date_separator: '/',discard_hour: true, discard_minute: true
        .diary__title
          = f.text_field :title
        .diary__content
          = f.text_area :content
      .save
        = f.submit "保存する"
        = link_to root_path, data: {"turbolinks" => false} do
          = '戻る'