.header
  .header__title
    日記

.body
  .sidebar
    .sidebar__text
    .sidebar__calendar
      = month_calendar events: @notes do |date, notes|
        = date.day
        - notes.each do |note|
          = link_to note_path(note) do
            = note.title
  .main
    .diary
      .diary__time
        = @note.start_time
      .diary__title
        = @note.title
      .diary__content
        = @note.content